# Symfony5 server configuration
#
server {
	listen 80 default_server;
	listen [::]:80 default_server;

	root /var/www/symfony;

	index index.php;

	server_name _;

	location / {
		try_files $uri $uri/ =404;
	}

	location ~ \.php$ {
		include snippets/fastcgi-php.conf;
		fastcgi_pass unix:/run/php/php7.3-fpm.sock;
	}

	location ~ /\.ht {
		deny all;
	}
}
